{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build debug with CMake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build-debug",
                "-j8"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Configure with CMake debug"
            ]
        },
        {
            "label": "Build release with CMake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build-release",
                "-j8"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Configure with CMake release"
            ]
        },
        {
            "label": "Configure with CMake debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Debug",
                "-S.",
                "-Bbuild-debug"
            ]
        },
        {
            "label": "Configure with CMake release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-S.",
                "-Bbuild-release"
            ]
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "open -n ${workspaceFolder}/dist/Debug/LogViewer.app",
            "args": [
                
            ]
        }
    ]
}