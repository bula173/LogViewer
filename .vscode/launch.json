{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Debug",
            "type": "cppdbg",
            "request": "launch",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "preLaunchTask": "Build debug with CMake",
            "linux": {
                "MIMode": "gdb",
                "program": "${workspaceFolder}/dist/Debug/LogViewer"

              },
              "osx": {
                "MIMode": "lldb",
                "program": "${workspaceFolder}/dist/Debug/LogViewer.app"
              },
              "windows": {
                "MIMode": "gdb",
                "program": "${workspaceFolder}/dist/Debug/LogViewer.exe"
              }

        },
        {
            "name": "Launch Release",
            "type": "cppdbg",
            "request": "launch",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "preLaunchTask": "Build release with CMake",
            "linux": {
                "program": "${workspaceFolder}/dist/Release/LogViewer"
              },
              "osx": {
                "MIMode": "lldb",
                "program": "${workspaceFolder}/dist/Release/LogViewer.app"
              },
              "windows": {
                "program": "${workspaceFolder}/dist/Release/LogViewer.exe"
              }

        },
        {
          "name": "Run",
          "type": "cppdbg",
          "request": "launch",
          "args": [],
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}",
          "environment": [],
          "externalConsole": false,
          "linux": {
              "program": "${workspaceFolder}/dist/Debug/LogViewer"
            },
            "osx": {
              "MIMode": "lldb",
              "program": "${workspaceFolder}/dist/Debug/LogViewer.app"
            },
            "windows": {
              "program": "${workspaceFolder}/dist/Debug/LogViewer.exe"
            }

        },
        {
            "name": "Launch Test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/LogViewer_tests",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "preLaunchTask": "Build debug with CMake",
            "linux": {
                "MIMode": "gdb",
                "program": "${workspaceFolder}/bin/LogViewer_tests"
            },
            "osx": {
                "MIMode": "lldb",
                "program": "${workspaceFolder}/bin/LogViewer_tests"
            },
            "windows": {
                "MIMode": "gdb",
                "program": "${workspaceFolder}/bin/LogViewer_tests.exe"
            }
        },
        {
            "name": "Launch Tests (Debug)",
            "type": "cppdbg",
            "request": "launch",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                { "name": "GTEST_COLOR", "value": "1" }
            ],
            "externalConsole": false,
            "preLaunchTask": "Build debug with CMake",
            "linux": {
                "MIMode": "gdb",
                "program": "${workspaceFolder}/bin/LogViewer_tests"
            },
            "osx": {
                "MIMode": "lldb",
                "program": "${workspaceFolder}/bin/LogViewer_tests"
            },
            "windows": {
                "MIMode": "gdb",
                "program": "${workspaceFolder}/bin/LogViewer_tests.exe"
            }
        },
        {
            "name": "Launch Single Test (Debug)",
            "type": "cppdbg",
            "request": "launch",
            "args": ["--gtest_filter=${input:gtestFilter}"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                { "name": "GTEST_COLOR", "value": "1" }
            ],
            "externalConsole": false,
            "preLaunchTask": "Build debug with CMake",
            "linux": {
                "MIMode": "gdb",
                "program": "${workspaceFolder}/tests/bin/LogViewer_tests"
            },
            "osx": {
                "MIMode": "lldb",
                "program": "${workspaceFolder}/tests/bin/LogViewer_tests"
            },
            "windows": {
                "MIMode": "gdb",
                "program": "${workspaceFolder}/tests/bin/LogViewer_tests.exe"
            }
        }
    ],
    "inputs": [
        {
            "id": "gtestFilter",
            "type": "promptString",
            "description": "gtest filter (e.g. XmlParserTest.ParseInvalidXml or XmlParserTest.*)",
            "default": "XmlParserTest.*"
        }
    ]
}
