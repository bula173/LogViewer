                "CMAKE_MAKE_PROGRAM": "C:/msys64/mingw64/bin/ninja.exe",
                "wxWidgets_CONFIG_EXECUTABLE": "C:/msys64/mingw64/bin/wx-config"
            },
            "environment": {
                "PATH": "C:/msys64/mingw64/bin;$penv{PATH}"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
